# RowFlow MCP Server - Environment Configuration
# Copy this file to .env and configure your database profiles

# PostgreSQL Connection Profiles
# Each profile requires: HOST, PORT, DATABASE, USER, PASSWORD
# Profile names are case-insensitive and should be alphanumeric

# Development Profile
PG_PROFILE_DEV_HOST=localhost
PG_PROFILE_DEV_PORT=5432
PG_PROFILE_DEV_DATABASE=mydb_dev
PG_PROFILE_DEV_USER=postgres
PG_PROFILE_DEV_PASSWORD=postgres
PG_PROFILE_DEV_SSL=false
PG_PROFILE_DEV_MAX_CONNECTIONS=10

# Production Profile (example)
# PG_PROFILE_PROD_HOST=prod-db.example.com
# PG_PROFILE_PROD_PORT=5432
# PG_PROFILE_PROD_DATABASE=mydb_prod
# PG_PROFILE_PROD_USER=prod_user
# PG_PROFILE_PROD_PASSWORD=secure_password
# PG_PROFILE_PROD_SSL=true
# PG_PROFILE_PROD_MAX_CONNECTIONS=20

# Staging Profile (example)
# PG_PROFILE_STAGING_HOST=staging-db.example.com
# PG_PROFILE_STAGING_PORT=5432
# PG_PROFILE_STAGING_DATABASE=mydb_staging
# PG_PROFILE_STAGING_USER=staging_user
# PG_PROFILE_STAGING_PASSWORD=staging_password
# PG_PROFILE_STAGING_SSL=true

# Local Testing Profile
# PG_PROFILE_LOCAL_HOST=127.0.0.1
# PG_PROFILE_LOCAL_PORT=5432
# PG_PROFILE_LOCAL_DATABASE=test_db
# PG_PROFILE_LOCAL_USER=test_user
# PG_PROFILE_LOCAL_PASSWORD=test_password

# Notes:
# - Profile names (DEV, PROD, etc.) can be any alphanumeric string
# - Use these profile names when calling MCP tools (e.g., profile: "dev")
# - SSL is optional and defaults to false
# - MAX_CONNECTIONS is optional and defaults to 10
