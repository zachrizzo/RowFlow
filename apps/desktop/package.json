{
  "name": "@rowflow/desktop",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "RowFlow Desktop - PostgreSQL viewer with MCP support",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "test": "vitest",
    "tauri": "tauri",
